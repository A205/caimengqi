<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BMIActivity"
    android:background="@drawable/tupian1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="BMI体重指数计算器"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp" />


    <TextView
        android:background="@drawable/yuankuang"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="身高(厘米)"
        android:textColor="#f5083916"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="255dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="22dp"
         />

    <EditText
        android:id="@+id/height"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入身高"
        android:inputType="number"
        android:text=""
        android:layout_below="@+id/textView2"
        android:layout_marginTop="245dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="158dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="40dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="体重(千克)"
        android:textColor="#f5083916"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="315dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="22dp"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入体重"
        android:inputType="number"
        android:text=""
        android:layout_below="@+id/textView2"
        android:layout_marginTop="305dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="158dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffbcd5bb"
        android:text="BMI计算"
        android:textSize="24dp"
        android:id="@+id/tton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="70dp"/>

</RelativeLayout>
